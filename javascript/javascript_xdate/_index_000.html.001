					//trace( b[ i ] , y.split( b[ i ] ).length-1 ,"   ", b[ i + 1 ] , ( b[ i + 1 ] * ( y.split( b[ i ] ).length-1 ) ) );
					r += b[ i + 1 ] * ( y.split( b[ i ] ).length-1 );
					//trace( b[ i + 1 ] * y.split( b[ i ] ).length-1 )
				}
			}
			
			/*
